<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootModal" maxHeight="-Infinity" prefHeight="726.0" prefWidth="1400.0" style="-fx-background-color: white;  -fx-background-radius: 8;" StackPane.alignment="BOTTOM_CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rocs.infirmary.application.controller.student.profile.StudentHealthProfileModalController">
    <effect>
        <DropShadow color="#00000055" offsetY="-100" radius="0" />
    </effect>

    <BorderPane prefHeight="700.0" prefWidth="1400.0">
        <AnchorPane />
        <stylesheets>
          <URL value="@../styles/buttons.css" />
          <URL value="@../styles/label.css" />
          <URL value="@../styles/table.css" />
          <URL value="@../styles/label.css" />
        </stylesheets>
        <top>
            <VBox prefWidth="1400.0" BorderPane.alignment="CENTER">
                <HBox alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="1400.0">
                    <padding>
                        <Insets left="20.0" right="20.0" />
                    </padding>
                      <Label fx:id="studentFullNameLabel" text="Student Full Name">
                  <font>
                     <Font size="15.0" />
                  </font></Label>
                    <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                        <Button fx:id="closeModalBtn" mnemonicParsing="false" text="Close" />
                    </HBox>
                </HBox>
            </VBox>
        </top>
      <center>
              <VBox prefHeight="514.0" prefWidth="500.0" BorderPane.alignment="CENTER">
                  <padding>
                      <Insets left="20.0" right="20.0" />
                  </padding>
                  <VBox>
                      <HBox prefHeight="79.0" prefWidth="1360.0" spacing="40.0">
                          <VBox prefHeight="79.0" prefWidth="0.0" HBox.hgrow="ALWAYS">
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
                                  <Label text="Age:" />
                                  <Label fx:id="ageLabel" text="Age" />
                              </HBox>
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
                                  <Label text="Sex:" HBox.hgrow="ALWAYS" />
                                  <Label fx:id="sexLabel" text="Sex" HBox.hgrow="ALWAYS" />
                              </HBox>
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
                                  <Label text="Birthdate:" />
                                  <Label fx:id="birthdateLabel" text="Birthdate" />
                              </HBox>
                          </VBox>
                          <VBox prefHeight="79.0" prefWidth="614.0" HBox.hgrow="ALWAYS">
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
                                  <Label text="Address:" />
                                  <Label fx:id="addressLabel" text="Address" />
                              </HBox>
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
                                  <Label text="Contact Number:" />
                                  <Label fx:id="contactNumberLabel" text="Contact Number" />
                              </HBox>
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                  <Label text="LRN:"/>
                                  <Label fx:id="lrnLabel" text="LRN"/>
                              </HBox>
                          </VBox>
                      </HBox>
                  </VBox>

                         <!-- recent clinic history table-->
                 <VBox fx:id="tableViewWrapper" prefHeight="446.0" prefWidth="1360.0" spacing="10.0" VBox.vgrow="ALWAYS">
                  <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="82.0" prefWidth="1400.0" VBox.vgrow="ALWAYS">
                        <Label text="Recent Clinic History:" />
                      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                          <Button fx:id="editHealthInfoBtn" mnemonicParsing="false" prefHeight="48.0" prefWidth="255.0" text="Update Medical Record">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                          </Button>
                      </HBox>
                  </HBox>
                     <TableView fx:id="clinicHistoryTableView" editable="true" prefHeight="572.0" prefWidth="1360.0" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                         <columns>
                             <TableColumn fx:id="illnessColumn" minWidth="200.0" text="Illness" />
                             <TableColumn fx:id="dateColumn" minWidth="200.0" text="Visit Date (YYYY/MM/DD)" />
                             <TableColumn fx:id="medicationColumn" minWidth="400.0" text="Given Medication" />
                             <TableColumn fx:id="temperatureColumn" minWidth="150.0" text="Temperature" />
                             <TableColumn fx:id="bloodPressureColumn" minWidth="150.0" text="Blood Pressure" />
                             <TableColumn fx:id="pulseRateColumn" minWidth="150.0" text="Pulse Rate" />
                             <TableColumn fx:id="respiratoryRateColumn" minWidth="150.0" text="Respiratory Rate" />
                             <TableColumn fx:id="nurseColumn" minWidth="200.0" text="Nurse" />
                         </columns>
                     </TableView>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
                 </VBox>
              </VBox>
      </center>

    </BorderPane>
</StackPane>
